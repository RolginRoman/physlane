{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es2020",
      "ES2021.Intl",
      "ES2021",
      "ES2022",
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "typeRoots": ["./types", "./node_modules/@types", "./node_modules/vite"],
    "paths": {
      "@physlane/api": ["libs/api/src/index.ts"],
      "@physlane/auth/core": ["libs/auth/core/src/index.ts"],
      "@physlane/auth/ui": ["libs/auth/ui/src/index.ts"],
      "@physlane/db": ["libs/db/src/index.ts"],
      "@physlane/domain": ["libs/domain/src/index.ts"],
      "@physlane/fonts": ["libs/fonts/src/index.ts"],
      "@physlane/ui": ["libs/ui/src/index.ts"],
      "@physlane/ui/*": ["libs/ui/src/*"],
      "@physlane/ui/utils": ["libs/ui/src/utils.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
